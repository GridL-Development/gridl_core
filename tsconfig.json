{
  "compilerOptions": {
    "outDir": "./lib",         // Output folder for compiled files
    "rootDir": "./src",        // Your source code lives here
    "target": "es2019",        // Adjust as needed
    "module": "CommonJS",      // For Node compatibility
    "declaration": true,       // Generate .d.ts files for consumers
    "sourceMap": true,         // Optional: useful for debugging
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
